# miHoYo Bot Environment Configuration
# Copy this file to .env and fill in your values

# === DISCORD CONFIGURATION ===
# Required: Your Discord Bot Token from Discord Developer Portal
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Optional: Default Discord webhook URL for notifications
# Individual guilds can override this with their own webhooks
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook_url_here

# === DATABASE CONFIGURATION ===
# SQLite Configuration (Recommended for 1GB RAM servers)
DB_PATH=/app/data/mihoyo_bot.db

# PostgreSQL Configuration (Uncomment for 4GB+ RAM servers)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mihoyo_bot
# DB_USER=mihoyo_user
# DB_PASSWORD=your_secure_password

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# === SECURITY CONFIGURATION ===
# Encryption key for cookie storage (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_fernet_encryption_key_here

# === APPLICATION CONFIGURATION ===
# Timezone for check-in scheduling (default: UTC)
TIMEZONE=UTC

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=false

# === LEGACY COMPATIBILITY ===
# Remove these after migration from Firebase
# FIREBASE_KEY=firebase_key.json
# DISCORD_GUILD_ID=your_guild_id_here
# CONSTANTS=constants.json

# === CRON CONFIGURATION ===
# Cron schedule for daily check-ins (default: 5 23 * * * = 11:05 PM daily)
CHECKIN_CRON_SCHEDULE=5 23 * * *

# === PERFORMANCE TUNING ===
# Maximum concurrent check-ins per game
MAX_CONCURRENT_CHECKINS=5

# Delay between check-ins (seconds)
CHECKIN_DELAY=2

# Request timeout (seconds)
REQUEST_TIMEOUT=30